<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.fusesource.esb.audit</groupId>
  <artifactId>audit</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>ESB Audit</name>
  
  <properties>
    <felix-version>1.4.0</felix-version>
    <esbaudit.osgi.export>${artifactId}</esbaudit.osgi.export>
    <esbaudit.osgi.import>*</esbaudit.osgi.import>
    <esbaudit.osgi.private/>
  </properties>
  
  <modules>
    <module>features</module>
    <module>org.fusesource.esb.audit.camel</module>
  </modules>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${felix-version}</version>
        <extensions>true</extensions>
        <inherited>true</inherited>
        <configuration>
          <instructions>
            <Bundle-Name>${artifactId}</Bundle-Name>
            <Export-Package>${esbaudit.osgi.export}</Export-Package>
            <Import-Package>${esbaudit.osgi.import}</Import-Package>
            <Private-Package>${esbaudit.osgi.private}</Private-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
